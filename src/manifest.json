{
  "manifest_version": 3,
  "name": "Charged: Supercharge your web3 productivity",
  "description": "A web3 transaction debugger to increase development speed",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon_lightning.png"
  },
  "icons": {
    "128": "icon_lightning.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon_lightning.png","injectedScript.bundle.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions":["storage"]
}

