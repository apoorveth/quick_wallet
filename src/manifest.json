{
  "manifest_version": 3,
  "name": "3Speed",
  "description": "A chrome extension to supercharge your web3 experience",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon_lightning.png"
  },
  "icons": {
    "128": "icon_lightning.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon_lightning.png","injectedScript.bundle.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions":["storage"]
}

